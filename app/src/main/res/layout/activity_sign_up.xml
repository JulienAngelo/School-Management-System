<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SignUp"
    android:orientation="vertical"
    android:background="#ffff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/header_template"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="7dp"
            android:gravity="center"
            android:text="CREATE ACCOUNT"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="348dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:onClick="imageClick"
            android:src="@drawable/abc_vector_test" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/student_admission_no"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/signup_formbox"
                android:elevation="5dp"
                android:hint="Admission Number"
                android:inputType="text"
                android:paddingLeft="25dp"

                android:textColorHint="#3c3b37" />

            <EditText
                android:id="@+id/student_fullname"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_formbox"
                android:elevation="5dp"
                android:hint="Student Full Name"
                android:inputType="text"
                android:paddingLeft="25dp"
                android:textColorHint="#3c3b37" />

            <EditText
                android:id="@+id/student_dob"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_formbox"
                android:elevation="5dp"
                android:hint="Date of Birth"
                android:inputType="date"
                android:paddingLeft="25dp"
                android:textColorHint="#3c3b37" />

            <EditText
                android:id="@+id/gaurdian_nic"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_formbox"
                android:elevation="5dp"
                android:hint="Parent / Gaurdian NIC"
                android:inputType="text"
                android:maxLength="10"
                android:paddingLeft="25dp"
                android:textColorHint="#3c3b37" />

            <EditText
                android:id="@+id/gaurdian_name"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_formbox"
                android:elevation="5dp"
                android:hint="Parent / Gaurdian Name"
                android:inputType="text"
                android:paddingLeft="25dp"
                android:textColorHint="#3c3b37" />

            <EditText
                android:id="@+id/gaurdian_contact_no"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_formbox"
                android:elevation="5dp"
                android:hint="Parent / Gaurdian Contact"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingLeft="25dp"
                android:textColorHint="#3c3b37" />

            <EditText
                android:id="@+id/permanent_address"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_formbox"
                android:elevation="5dp"
                android:hint="Permanent Address"
                android:inputType="text"
                android:paddingLeft="25dp"
                android:textColorHint="#3c3b37" />

            <EditText
                android:id="@+id/admission_date"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_formbox"
                android:elevation="5dp"
                android:hint="Admission Date"
                android:inputType="date"
                android:paddingLeft="25dp"
                android:textColorHint="#3c3b37" />

            <Button
                android:id="@+id/signUp"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:text="Sign Up"
                android:textColor="#fff"
                android:textAllCaps="true"
                android:layout_marginTop="25dp"
                android:elevation="5dp"
                android:background="@drawable/signup_button"
                />

            <TextView
                android:id="@+id/terms_and_conditions"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions apply"
                android:textColor="#000"
                android:layout_marginTop="1dp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>





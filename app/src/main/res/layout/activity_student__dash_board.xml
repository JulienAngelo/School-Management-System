                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/second_term" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

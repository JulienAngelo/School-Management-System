<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student_welcome_page"
    android:largeHeap="true"
    android:hardwareAccelerated="false"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="-70dp"
        android:scaleType="fitXY"
        android:src="@drawable/group_4"/>
    <ImageView
        android:id="@+id/leaves"
        android:src="@drawable/group_3"
        android:layout_marginLeft="-480dp"
        android:layout_marginTop="-140dp"
        android:layout_width="250dp"
        android:layout_height="250dp"/>

    <LinearLayout
        android:id="@+id/textsplash"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginStart="-45dp"
        android:layout_marginTop="-50dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pro"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/welcomeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#FFF"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="David Oodugama"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeId"
            android:textColor="#FFF"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>